{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Backend Server",
            "type": "shell",
            "command": "${workspaceFolder}/backend/.venv/Scripts/python.exe",
            "args": [
                "${workspaceFolder}/backend/main.py"
            ],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Run Backend with Uvicorn",
            "type": "shell",
            "command": "${workspaceFolder}/backend/.venv/Scripts/python.exe",
            "args": [
                "-m",
                "uvicorn",
                "main:app",
                "--reload",
                "--port",
                "8000"
            ],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}

